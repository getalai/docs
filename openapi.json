          "Japanese",
          "Korean",
          "Chinese (Simplified)",
          "Hindi",
          "Swedish",
          "Norwegian",
          "Danish",
          "Finnish",
          "Greek",
          "Turkish",
          "Czech",
          "Hungarian",
          "Romanian",
          "Bulgarian",
          "Ukrainian",
          "Vietnamese",
          "Thai",
          "Indonesian"
        ],
        "title": "LanguageType"
      },
      "PresentationGenerationStatus": {
        "properties": {
          "generation_id": {
            "type": "string",
            "title": "Generation Id"
          },
          "status": {
            "allOf": [
              {
                "$ref": "#/components/schemas/ApiGenerationStatus"
              }
            ],
            "description": "Current state: pending \u2192 in_progress \u2192 completed/failed"
          },
          "error": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "title": "Error",
            "description": "Human-readable error message when status is 'failed'"
          },
          "created_at": {
            "type": "string",
            "title": "Created At"
          },
          "completed_at": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "title": "Completed At",
            "description": "ISO 8601 timestamp when generation finished"
          },
          "generation_type": {
            "type": "string",
            "enum": [
              "presentation_generation"
            ],
